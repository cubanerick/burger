<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img src="https://static.businessinsider.com/image/55958babeab8ead17b65fac6-750.jpg">
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1>Eat-Da-Burger</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                    <li>
                        {{burger_name}}
                        <button class="eat" data-id="{{this.id}}" data-devoured="{{this.devoured}}">
                        {{#unless devoured}}Devour it!{{/unless}}
                        </button>
                    </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul>
                {{#each burger}}
                {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Create A Burger</h2>
                <form class="create-form">

                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>

                <button id = "add" type="submit">Cook!</button>
                </form>
        </div>
    </div>
</div>